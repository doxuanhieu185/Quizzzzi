<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/resultLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ResultFragment"
    >


    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="416dp"
        android:layout_height="245dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="146dp"
            android:layout_height="match_parent"
            android:src="@drawable/congratulation3" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="1dp"
            android:src="@drawable/congratulation4" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:src="@drawable/congratulation2" />

        <TextView
            android:layout_width="205dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="104dp"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="107dp"
            android:layout_marginBottom="75dp"
            android:fontFamily="@font/bangers_regular"
            android:gravity="center"
            android:text="Chúc mừng bạn đã trả lời đúng"
            android:textSize="20sp" />
    </RelativeLayout>


    <TextView
        android:id="@+id/result_tv"
        android:layout_width="121dp"
        android:layout_height="91dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/bangers_regular"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#DD201F1F"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout3" />

    <Button
        android:id="@+id/go_home"
        android:layout_width="182dp"
        android:layout_height="57dp"

        android:drawableLeft="@drawable/ic_baseline_done_outline_24"
        android:onClick="goHome"
        android:paddingEnd="10dp"
        android:text="Hoàn thành"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result_tv"
        app:layout_constraintVertical_bias="0.217" />

    <Button
        android:id="@+id/share_result"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:onClick="shareResult"
        android:text="Chia sẻ thành tích"
        android:drawableLeft="@drawable/ic_baseline_mail_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingEnd="10dp"
        app:layout_constraintTop_toBottomOf="@+id/go_home" />

</androidx.constraintlayout.widget.ConstraintLayout>